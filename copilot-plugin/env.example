# IRIS Backend Configuration
IRIS_API_URL=https://iris.pnj.com.vn
IRIS_API_BASE_URL=https://iris.pnj.com.vn/api/v1

# Azure AD Configuration
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_REDIRECT_URI=https://iris.pnj.com.vn/api/v1/azure-ad/callback

# Plugin Configuration
PLUGIN_SECRET=your-plugin-secret-key
PLUGIN_NAME=IRIS Teams Copilot
PLUGIN_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
CORS_ORIGINS=["https://iris.pnj.com.vn", "https://copilot.microsoft.com"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Development
DEBUG=false
ENVIRONMENT=production
