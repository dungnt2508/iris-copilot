# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# IRIS Backend Configuration (Production Domain)
IRIS_API_URL=https://YOUR_NGROK_DOMAIN.ngrok.io
IRIS_API_BASE_URL=https://YOUR_NGROK_DOMAIN.ngrok.io/api/v1

# Azure AD Configuration (Production)
AZURE_AD_CLIENT_ID=YOUR_PRODUCTION_CLIENT_ID
AZURE_AD_CLIENT_SECRET=YOUR_PRODUCTION_CLIENT_SECRET
AZURE_AD_TENANT_ID=YOUR_PRODUCTION_TENANT_ID
AZURE_AD_REDIRECT_URI=https://infra-inno.pnj.com.vn/rest/oauth2-credential/callback

# Enterprise SSO Configuration
ENTERPRISE_SSO_ENABLED=true
ENTERPRISE_SSO_URL=https://infra-inno.pnj.com.vn/rest/oauth2-credential
ENTERPRISE_SSO_EXCHANGE_URL=https://infra-inno.pnj.com.vn/rest/oauth2-credential/exchange

# Plugin Configuration
PLUGIN_SECRET=YOUR_PRODUCTION_SECRET_KEY
PLUGIN_NAME=IRIS Teams Copilot
PLUGIN_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security (Production CORS)
CORS_ORIGINS=["https://YOUR_NGROK_DOMAIN.ngrok.io", "https://copilot.microsoft.com"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Server Configuration
HOST=0.0.0.0
PORT=8001
