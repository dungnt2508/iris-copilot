# Development Environment Configuration
ENVIRONMENT=development
DEBUG=true

# IRIS Backend Configuration (localhost)
IRIS_API_URL=http://localhost:8000
IRIS_API_BASE_URL=http://localhost:8000/api/v1

# Azure AD Configuration (placeholder for development)
AZURE_AD_CLIENT_ID=dev-client-id
AZURE_AD_CLIENT_SECRET=dev-client-secret
AZURE_AD_TENANT_ID=dev-tenant-id
AZURE_AD_REDIRECT_URI=http://localhost:8001/api/v1/azure-ad/callback

# Plugin Configuration
PLUGIN_SECRET=dev-secret-key-123
PLUGIN_NAME=IRIS Teams Copilot
PLUGIN_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security (allow localhost for development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8001", "http://localhost:8000"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Server Configuration
HOST=0.0.0.0
PORT=8001
